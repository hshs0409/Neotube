mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`, poster=`/${video.thumbnail}`)
        .videoPlayer__progressBar
            progress.progressBar(min="0" max="100" value="0")
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play 
                span#jsVolumeButton
                    i.fas.fa-volume-up
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.01" value="0.5")
                span#currentTime 00:00:00 
                span /
                span#totalTime 00:00:00
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand